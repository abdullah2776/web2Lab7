@model IEnumerable<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-1">🎓 Students</h2>
            <small class="text-muted">
                Total Students: <strong>@Model.Count()</strong>
            </small>
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            ➕ Add Student
        </a>
    </div>

    <!-- Search -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group input-group-lg shadow-sm">
            <span class="input-group-text bg-white">🔍</span>
            <input type="text"
                   name="searchString"
                   class="form-control border-start-0"
                   placeholder="Search by name or student ID"
                   value="@Context.Request.Query["searchString"]" />
            <button class="btn btn-primary" type="submit">
                Search
            </button>
        </div>
    </form>

    <!-- Table Card -->
    <div class="card shadow border-0 rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Student</th>
                        <th>Student Number</th>
                        <th>Email</th>
                        <th>Program</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Avatar + Name -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-3">
                                        @item.FullName.Substring(0, 1)
                                    </div>
                                    <div class="fw-semibold">
                                        @item.FullName
                                    </div>
                                </div>
                            </td>

                            <td>@item.StudentNumber</td>
                            <td>@item.Email</td>

                            <td>
                                <span class="badge bg-secondary px-3 py-2">
                                    @item.Program
                                </span>
                            </td>

                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info me-1">
                                    👁
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-warning me-1">
                                    ✏
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    🗑
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center p-5 text-muted">
                    <h5>No students found</h5>
                    <p>Try adjusting your search.</p>
                </div>
            }
        </div>
    </div>

</div>
