@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">➕ Create New Student</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter full name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StudentNumber" class="form-label fw-semibold"></label>
                            <input asp-for="StudentNumber" class="form-control form-control-lg" placeholder="Enter student number" />
                            <span asp-validation-for="StudentNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="example@university.edu" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Program" class="form-label fw-semibold"></label>
                            <input asp-for="Program" class="form-control form-control-lg" placeholder="CS" />
                            <span asp-validation-for="Program" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Create Student
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <a asp-action="Index" class="text-decoration-none">
                        ← Back to Student List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
